<h1>Profile</h1>
<div class="row">
  <div class="col-md-8">
    <%= @user.email %>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <%= link_to "Edit Your Account",  edit_user_registration_path(current_user.id), class: 'btn btn-success' %>
  </div>
</div>
<h1>Events created by you</h1>
<% @user.events.each do |event| %>
  <div class="row">
    <div class="col-md-8">
      <%= link_to event.name, event_path(event) %>
      </br>
      <small>Start: <%= event.startdate %></small>
      </br>
      <small>End: <%= event.enddate %></small>
    </div>
  </div>  
<% end %> 