<div class="row">
  <div class="col-md-8">
    <h1><%= @event.name %></h1>
    </br>
    Your current role is <%= current_role %>
    </br>
    <%= @event.startdate %>
    </br>
    <%= @event.enddate %>
    </br>
    <!--Example weather data -->
    Weather will be <strong><%= show_weather_data %></strong> 
  </div>
  <div class="col-md-4">
    <% if current_role == 'planner' %>
      <%= link_to "Delete Event", @event, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this event?' } %>
    <% end %>
  </div>
</div>
<div class="row">
  <h3>Activities</h3>
  <% @event.activities.each do |activity| %>
    <div class="media">
      <%= render 'activities/activity', activity: activity%>
    </div>
  <% end %>
  <h3>Add an activity</h3>
  <div class="media">
    <%= render 'activities/form', event: @event, activity: Activity.new %>
  </div>
</div>