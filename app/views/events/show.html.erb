<div class="row">
  <div class="col-md-8">
    <h1><%= @event.name %></h1>
    </br>
    Your current role is <%= current_role %>
    </br>
    <% if @event.startdate == @event.enddate %>
      One-day event </br>
      <%= @event.startdate.strftime('%b %e, %Y') %>
    <% else %>
      <%= @event.startdate.strftime('%b %e, %Y') %> - <%= @event.enddate.strftime('%b %e, %Y') %>
    <% end %>
    </br>
    <strong>Location:</strong>
    <%= @event.location %>
    </br>
    <!--Example weather data -->
    <div>
      <strong>Weather:</strong>
      <p>Summary: <%= @current_weather.summary %></p>
      <p>Temperature: <%= @current_weather.temperature %></p>
      <p>Wind Speed: <%= @current_weather.windSpeed %></p>
    </div>
  </div>
  <div class="col-md-4">
    <% if current_role == 'planner' %>
      <%= link_to "Delete Event", @event, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this event?' } %>
    <% end %>
  </div>
</div>
<div class="row">
  <h3>Activities</h3>
  <% @event.activities.each do |activity| %>
    <div class="media">
      <%= render 'activities/activity', activity: activity%>
    </div>
  <% end %>
  <h3>Add an activity</h3>
  <div class="media">
    <%= render 'activities/form', event: @event, activity: Activity.new %>
  </div>
</div>