<h4>Add an activity</h4>
 <%= form_for [event, activity] do |f| %>

   <div class="form-group">
     <%= f.label :name, class: 'sr-only' %>
     <%= f.text_field :name, class: 'form-control', placeholder: "Enter a new activity" %>
   </div>
   <div class="form-group">
     <%= f.label :starttime, class: 'sr-only' %>
     <%= f.text_field :starttime, class: 'form-control' %>
   </div>
   <div class="form-group">
     <%= f.label :completed, class: 'sr-only' %>
     <%= f.text_field :completed, class: 'form-control' %>
   </div>
   <%= f.submit "Submit", class: 'btn btn-default pull-right' %>
 <% end %>
